{
  "project": {
    "name": "Devarsons Industries Website Redesign",
    "client": "Devarsons Industries Pvt. Ltd.",
    "established": 1923,
    "tagline": "The Colour Solution Company",
    "current_website": "https://www.devarsons.com/",
    "director": "Sandeep Shah"
  },
  "objective": "Create multiple modern and premium design variations for a 100-year-old colorant manufacturer, emphasizing innovation, R&D excellence, and global presence while avoiding typical industry aesthetics.",
  "design_philosophy": {
    "avoid": [
      "Generic layouts",
      "Bright rainbow color schemes",
      "Cluttered designs",
      "Typical Indian manufacturing aesthetics",
      "Stock photos overuse"
    ],
    "embrace": [
      "Clean, bold, minimal design",
      "Dark/black or grey themes",
      "Subtle neon/gradient accents",
      "Intelligent micro-interactions",
      "Molecular animations",
      "Cinematic transitions"
    ]
  },
  "inspiration_references": [
    "os.agency",
    "rejouice.com",
    "eonixenergy.com",
    "theshowroom.lvmh.com"
  ],
  "landing_animation": {
    "sequence": [
      {
        "step": 1,
        "action": "Dark screen fade-in",
        "duration": "0.5s"
      },
      {
        "step": 2,
        "action": "Text: 'Break the Shackles'",
        "duration": "1.5s",
        "effect": "fade in → hold → fade out"
      },
      {
        "step": 3,
        "action": "Text: 'Challenge Barriers'",
        "duration": "1.5s",
        "effect": "fade in → hold → fade out"
      },
      {
        "step": 4,
        "action": "Text: 'Transcend Boundaries'",
        "duration": "1.5s",
        "effect": "fade in → hold → fade out"
      },
      {
        "step": 5,
        "action": "Text: 'Lead'",
        "duration": "2s",
        "effect": "fade in → hold"
      },
      {
        "step": 6,
        "action": "Devarsons logo reveal",
        "duration": "1s",
        "effect": "scale from 0.8 to 1 + fade in"
      },
      {
        "step": 7,
        "action": "Tagline: 'The Colour Solution Company'",
        "duration": "0.8s",
        "effect": "fade in below logo"
      },
      {
        "step": 8,
        "action": "Transition to main content",
        "duration": "0.5s",
        "effect": "smooth scroll indicator appears"
      }
    ]
  },
